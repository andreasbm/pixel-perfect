{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"project": {
		"name": "pixel-perfect"
	},
	"apps": [
		{
			"root": "src/demo",
			"outDir": "dist",
			"assets": [
				"assets"
			],
			"index": "index.html",
			"main": "main.ts",
			"polyfills": "polyfills.ts",
			"test": "test.ts",
			"tsconfig": "tsconfig.app.json",
			"prefix": "pp",
			"styles": [
				"styles.scss"
			]
		}
	],
	"defaults": {
		"styleExt": "scss",
		"prefixInterfaces": true,
		"inline": {
			"style": false,
			"template": false
		},
		"spec": {
			"class": false,
			"component": true,
			"directive": true,
			"module": false,
			"pipe": true,
			"service": true
		}
	}
}
